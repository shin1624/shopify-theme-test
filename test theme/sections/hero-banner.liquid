{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Vintage Clothing Collection"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Find your one-of-a-kind piece."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}

{% stylesheet %}
.hero-banner {
  position: relative;
  width: 100%;
  min-height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-background, #f5f5f5);
  overflow: hidden;
}
.hero-banner__image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 1;
}
.hero-banner__content {
  position: relative;
  z-index: 2;
  text-align: center;
  color: var(--color-foreground, #fff);
  padding: 2rem;
  background: rgba(0,0,0,0.3);
  border-radius: 1rem;
  max-width: 90vw;
}
.hero-banner__heading {
  font-size: 2.5rem;
  font-weight: bold;
  margin-bottom: 1rem;
}
.hero-banner__subtext {
  font-size: 1.25rem;
  margin-bottom: 2rem;
}
.hero-banner__button {
  display: inline-block;
  padding: 0.75em 2em;
  font-size: 1rem;
  background: var(--color-accent, #ff7f50);
  color: #fff;
  border: none;
  border-radius: 2em;
  text-decoration: none;
  transition: background 0.2s;
}
.hero-banner__button:hover {
  background: var(--color-accent-dark, #e65c2c);
}
{% endstylesheet %}

<section class="hero-banner">
  {% if section.settings.image != blank %}
    <img class="hero-banner__image" src="{{ section.settings.image | image_url: width: 1800 }}" alt="{{ section.settings.heading | escape }}">
  {% endif %}
  <div class="hero-banner__content">
    {% if section.settings.heading != blank %}
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {% endif %}
    {% if section.settings.subtext != blank %}
      <div class="hero-banner__subtext">{{ section.settings.subtext }}</div>
    {% endif %}
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a class="hero-banner__button" href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
    {% endif %}
  </div>
</section> 